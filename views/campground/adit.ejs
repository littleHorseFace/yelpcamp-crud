<% layout('./layout/boilerplate') %>

  <section>
    <h1 class="text-center">
      adit campground
    </h1>
    <div class="col-6 offset-3">
      <form action="/campground/<%=aditCamp._id%>?_method=PUT" method="post">
        <section class="mb-3">
          <label for="tittle">camp tittle</label>
          <input class="form-control form-control-lg" type="text" name="campground[tittle]" id="tittle"
            placeholder="enter tittle" value="<%=aditCamp.tittle%>">
        </section>
        <section class="mb-3">
          <label for="img">img url</label>
          <input class="form-control form-control-lg" type="text" name="campground[img]" id="img"
            placeholder="enter img url" value="<%=aditCamp.img%>">
        </section>
        <section class="mb-3">
          <label for="location">camp location</label>
          <input class="form-control form-control-lg" type="text" name="campground[location]" id="location"
            placeholder="enter location" value="<%=aditCamp.location%>">
        </section>
        <section class="mb-3">
          <label for="price">price tag</label>
          <div class="input-group mb-3">
            <span class="input-group-text" id="price-lable">$</span>
            <input type="text" class="form-control" placeholder="enter price" aria-label="price"
              aria-describedby="price-lable" id="price" name="campground[price]" value="<%=aditCamp.price%>">
          </div>
        </section>
        <section class="mb-3">
          <label for="floatingTextarea">Comments</label>
          <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"
            name="campground[description]" value="<%=aditCamp.description%>">
              </textarea>
        </section>
        <button type="submit" class="btn btn-primary">submit</button>
      </form>
    </div>
  </section>
<% layout('./layout/boilerplate') %>
  <div class="row">
    <div class="mt-3 col-6 offset-3">
      <div class="card">
        <img src="<%=showCamp.img%>" alt="<%=showCamp.tittle%>" class="card-img-top">
        <div class="mt-3 mb-2 card-body">
          <h1 class="card-title">
            <%=showCamp.tittle%>
          </h1>
          <p class="card-text">
            <%= showCamp.description%>
          </p>
          <div>
            location : <%=showCamp.location%>
          </div>
          <div>
            one/night : $<%=showCamp.price%>
          </div>
        </div>
        <div class="d-flex mb-3 card-body">
          <a href="/campground/<%=showCamp._id%>/adit" class="btn btn-warning">adit campground</a>
          <form action="/campground/<%=showCamp._id%>?_method=DELETE" method="post" class="ms-2">
            <button class="btn btn-danger">cancel</button>
          </form>
        </div>
        <div class="card-footer text-muted">
          2days ago
        </div>
      </div>

    </div>
  </div>